.page-header
  .pull-right
    = link_to 'Edit Venture', edit_life_venture_path(@life_venture), class: "btn btn-info"
    =link_to "New Reason", new_life_venture_reason_path(@life_venture), class: "btn btn-success"
  %h1 Life Ventures

%table
  %thead
    %tr
      %th Name
      %th Category
  %tbody
    -@life_venture.reasons.each do |reason|
      %tr
        %td= reason.name
        %td= reason.priority
