.page-header
  .pull-right
    =link_to "New Reason", new_life_venture_reason_path(@life_venture), class: "btn btn-success"
  %h1 List of Reasons

%ol.breadcrumb
  %li= link_to "Life Ventures", life_ventures_path
  %li= link_to @life_venture.name, life_venture_path(@life_venture)
  %li Reasons

%table.footable
  %thead
    %tr
      %th Description
      %th Priority
      %th{"data-sort-ignore" => "true"}
      %th{"data-sort-ignore" => "true"}

  %tbody
    - @reasons.each do |reason|
      %tr
        %td= reason.name
        %td= reason.priority
        %td= link_to 'Edit', edit_life_venture_reason_path(@life_venture, reason), class: "btn btn-warning pull-right"
        %td= link_to '', life_venture_reasons_path(@life_venture, reason), method: :delete, class:'glyphicon glyphicon-remove'
