.row
  .well.col-md-offset-3.col-md-6
    .form-group.page-header
      %h1 Sign up - Why is the Way

      - if @user.errors.any?
        .text-danger
          -@user.errors.full_messages.each do |message|
            = message

    = form_for @user, url: sign_up_path do |f|

      .form-group
        = f.label :first_name, class: 'control-label'
        = f.text_field :first_name, class: 'form-control'
      .form-group
        = f.label :last_name, class: 'control-label'
        = f.text_field :last_name, class: 'form-control'
      .form-group
        = f.label :date_of_birth, class: 'control-label'
        = f.text_field :date_of_birth, placeholder: "mm/dd/yyyy", class: 'form-control'
      .form-group
        = f.label :email, class: 'control-label'
        = f.email_field :email, class: 'form-control'
      .form-group
        = f.label :password, class: 'control-label'
        = f.password_field :password, class: 'form-control'
      .form-group
        = f.label :password_confirmation, class: 'control-label'
        = f.password_field :password_confirmation, class: 'form-control'
      .form-group
        = f.submit "Create Account", class: 'btn btn-primary'
